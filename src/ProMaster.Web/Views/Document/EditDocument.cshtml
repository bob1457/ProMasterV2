@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


<script type="text/javascript">
    $(document).ready(function () {
        $("#cancel").hide();
        $("#doc").hide();
    });

    $("#show").click(function () {
        $("#doc").show();
        $("#cancel").show();
        $("#show").hide();
        return false;
    });
</script>

<script type="text/javascript">
    $("#cancel").hide();
    $("#image").hide();

    $("#show").click(function () {
        $("#image").show();
        $("#show").hide();
        $("#cancel").show();

        return false;
    });

    $("#cancel").click(function () {
        $("#image").hide();
        $("#show").show();
        $("#cancel").hide();
    });
</script>