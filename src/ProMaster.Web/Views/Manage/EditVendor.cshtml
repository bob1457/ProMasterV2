@model ProMaster.Core.Vendor.ViewModels.DisplayVendorViewModel

@{
    ViewBag.Title = "Edit Vendor";
}


<div class="content-wrapper">
    <aside> 
    <p><!-- Left Panel/Column -->
      <div id="left">
        
         
      	    <div class="profile_logo">
        	    <img src="@Url.Content("~/Content/Images/vendor3.png")" alt="" title="@Model.VendorName" />            
            </div>

             <div class="profile_caption metro">
        	    <h3>@Html.DisplayFor(model => model.VendorBusinessName)</h3>
        	    <br />

                <span>
            	    <div class="display-label">
                       Lease Added on:
                    </div><br />
                    <div class="display-field">
                        @Html.DisplayFor(model => model.CreationDate)
                    </div><br />

                    <div class="display-label">
                        Last Updated on:
                    </div><br />
                    <div class="display-field">
                        @Html.DisplayFor(model => model.UpdateDate)
                    </div><br />
                </span>
             
    </div>

      <p></p>
      
        <div class="side_title_caption metro">
            <p></p>
            <span><i class="icon-new-tab rss_color"></i> Quick Access</span>
            <div class="side-widget">
                <a href="@Url.Content("~/Tools/Messaging")" title="Messaging"><div class="tile amarelo" id="p1"><span><i class="fa fa-envelope-o"></i></span><br /><br /> Messaging</div></a>
                <a href="@Url.Content("~/Tools/Calendar")" title="Calendar"><div class="tile vermelho" id="p2"><span><i class="fa fa-calendar-o"></i></span><br /><br /> Calendar</div></a>
                <a href="@Url.Content("~/Tools/Resources")" title="Resources"><div class="tile metro_dark_blue" id="p3"><span><i class="fa fa-user"></i></span><br /><br /> Resources</div></a>
                <a href="@Url.Content("~/Tools/DocTool")" title="Document Tools"><div class="tile purple" id="p4"><span><i class="icon-clipboard-2"></i></span><br /><br /> Document Tools</div></a>
            </div>

        </div>     


      </div>      
    </p>
    <p>&nbsp;</p>
    <p>&nbsp;</p>
  </aside><!-- End of aside -->



 <div class="main metro">
    <div id="add_edit_panel">
        <h3><i class="fa fa-th"></i> &nbsp; EDIT VENDOR        	
          <span>Please fill/Update all required fields and click "Save".</span>
        </h3>
                <!-- <fieldset class="edit"> 
                <legend><span></span></legend> --><!-- </fieldset>  -->
                
                @using (Html.BeginForm()) 
                { 
                    <div class="edit_field">
                         <fieldset>
                            <legend><span><i class="fa fa-info-circle"></i> Basic Information</span></legend>
                            
                                           
                                <div class="display-label">
                                    <span class="grey-font">Vendor ID:</span>
                                </div>
                                <div class="display-field" style="padding-top: 5px;">
                                    <span class="grey-font">@Html.DisplayFor(model => model.VendorId)</span>
                                </div> 
                                <br /><br />
                                    <br />
                                <div class="display-label">
                                    Business Name:
                                </div>
                                <div class="display-field">
                                    @Html.TextBoxFor(model => model.VendorBusinessName, new { autofocus = "" })
                                    @Html.ValidationMessageFor(model => model.VendorBusinessName)
                                </div> 
                                <br />
                                <div class="display-label">
                                    Description:
                                </div>
                                <div class="display-field">
                                    @Html.TextAreaFor(model => model.VendorDesc)                                
                                </div>
                                <br />

                                <div class="display-label">
                                    Contract First Name:
                                </div>
                                <div class="display-field">
                                    @Html.TextBoxFor(model => model.FistName, new { autofocus = "" })
                                    @Html.ValidationMessageFor(model => model.VendorBusinessName)
                                </div> 
                                <br />
                                <div class="display-label">
                                    Contract Last Name:
                                </div>
                                <div class="display-field">
                                    @Html.TextBoxFor(model => model.LastName)
                                    @Html.ValidationMessageFor(model => model.LastName)
                                </div> 
                                <br />
                                <div class="display-label">
                                    Contact Email:
                                </div>
                                <div class="display-field">
                                   @Html.EditorFor(model => model.ContactEmail)
                                   @Html.ValidationMessageFor(model => model.ContactEmail)
                                </div>
                                <br />
                                <div class="display-label">
                                    Contact Tel 1:
                                </div>
                                <div class="display-field">
                                   @Html.EditorFor(model => model.ContactTelephone1)
                                   @Html.ValidationMessageFor(model => model.ContactTelephone1)
                                </div>
                                <br />
                                <div class="display-label">
                                     Contact Tel 2:
                                </div>
                                <div class="display-field">
                                   @Html.EditorFor(model => model.ContactTelephone2)
                                   @Html.ValidationMessageFor(model => model.ContactTelephone2)
                                </div>
                                <br />

                                <div class="display-label">
                                    Vendor Specialty:
                                </div>
                                <div class="display-field">
                                   @Html.DropDownListFor(model => model.VendorSpecialtyId, Model.VendorSpecialtyList)                                   
                                </div>
                                <br />
                                
                                
                            </fieldset>
                                <br />

                        </div> 
                    
                    <div class="right-aligned"><input type="submit" value="Save" /></div>
                } 

             </div> 
  
  
  </div><!-- end of main -->

</div><!-- end of content wrapper-->

