@model ProMaster.Core.Vendor.ViewModels.DisplayVendorViewModel

@{
    ViewBag.Title = "Vendor Details";
}


<div class="content-wrapper">
    <aside>
    <!-- Left Panel/Column -->
      <div id="left">
      	<div class="side_details_logo">
        	<img src="@Url.Content("~/Content/Images/vendor3.png")" alt="" title="Vendor Details" />          
        </div>
        <div class="side_details_caption metro">
        	<h3>Vendor Details</h3>
        	<br />
            <span>
                 <!-- 	  Detailed tenant information -->
                 @Model.VendorBusinessName
                <p></p>
                    <div class="display-label">
                       Vendor Added On:
                    </div><br />
                    <div class="display-field">
                        @Html.DisplayFor(model => model.CreationDate)
                    </div><br />

                    <div class="display-label">
                        Last Updated on:
                    </div><br />
                    <div class="display-field">
                        @Html.DisplayFor(model => model.UpdateDate)
                    </div><br />
            </span>
            <p></p><p></p>
            <h6>Serviced Propoerties</h6>
            <div class="side_details_content">
                
                
            
            </div>
        </div>
      </div>
      
        <p>&nbsp;</p>
        <p>&nbsp;</p>
    </aside><!-- End of aside -->

    <div class="main metro">
        <div id="manage-tabs" class="tabs-style">
          <ul>
            <li><a href="#tabs-1"><i class="fa fa-list-alt"></i> &nbsp;<span>General</span></a></li>    
            
          </ul>
  		  <div id="tabs-1">    		
            <div class="tab_content">
                <div class="tab_content_title">
                    <span class="title_icon"><img src="@Url.Content("~/Content/Images/contractor.png")" alt="" title="" /></span>
                    <span class="title_text"><h5>Management Contract Information</h5></span>
                    <br />
                    <span class="title_caption">Vendor information, including address, features and facilities, etc.</span>
                </div>  
                <div class="tab_content_field">
                                        
                    <fieldset>
                        <legend><span><i class=" icon-address-book"></i> Basic Information</span></legend>
                        <div class="basic">
                            <div class="display-label">
                            Vendor ID:
                        </div>
                        <div class="display-field">
                            @Html.DisplayFor(model => model.VendorId)
                        </div> 
                        <br />
                        <div class="basic">
                            <div class="display-label">
                            Business Name:
                        </div>
                        <div class="display-field">
                            @Html.DisplayFor(model => model.VendorBusinessName)
                        </div> 
                        <br />
                        <div class="display-label">
                            First Name:
                        </div>
                        <div class="display-field">
                            @Html.DisplayFor(model => model.FistName)
                        </div><br /> 
                            <div class="display-label">
                            Last Name:
                        </div>
                        <div class="display-field">
                            @Html.DisplayFor(model => model.LastName)
                        </div>
                        <br />
                        <div class="display-label">
                           Contrator Email:
                        </div>
                        <div class="display-field">
                            @Html.DisplayFor(model => model.ContactEmail)
                        </div>
                        <br />
                        <div class="display-label">
                            Contract Tel 1:
                        </div>
                        <div class="display-field">
                            @Html.DisplayFor(model => model.ContactTelephone1)
                        </div>
                        <br />
                        <div class="display-label">
                            Contract Tel 2:
                        </div>
                        <div class="display-field">
                            @Html.DisplayFor(model => model.ContactTelephone2)
                        </div>
                        <br />
                        <div class="display-label">
                            Vendor Specialty:
                        </div>
                        <div class="display-field">
                            @Html.DisplayFor(model => model.VendorSepcialtyName)
                        </div>
                        <br />
                        
                        
                    </div>                     
                    
                    </fieldset> 
                    
                   
                    <div class="left-aligned backbutton"><a id="back" href="@Url.Content("~/Manage")" title="Back..."><span class="backbutton_format"><i class="icon-arrow-left-3"></i></span> Back to List...</a></div>
                    <div class="right-aligned"><div class="edit_button button-med ">@Html.ActionLink("Edit", "EditVendor", new { id=Model.VendorId/**/ })</div></div>
                </div>
            
            
  		  </div>
         
		</div>
         
            
    
     
     </div>
        
    </div><!-- end of main -->

</div><!-- end of content-wrapper- -->

<!--Jquery ui tabs Script -->
<script type="text/javascript">
    $(function () {
        $("#manage-tabs").tabs();
    });
</script>

