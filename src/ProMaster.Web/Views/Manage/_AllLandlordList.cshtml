@model IEnumerable<ProMaster.Core.ViewModels.ManageDisplayViewModel>

@{
    ViewBag.Title = "All Property Owner List";
}

<table>
            <thead>
            	<tr>
                	<td colspan="10" class="table-h verde">
                    <span><i class="fa fa-th-list"></i></span> Landlord List 
                    </td>                    
                </tr>	
            </thead>
            	<tr>
                	<th>ID</th>
                    <th></th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Telephone</th>                    
                    <th>Email</th>
                    <th>Added</th>
                    <th>Updated</th>
                    <th></th> 
                    <th></th>                   
                </tr>
                
                
                @if (Model.Count() != 0)
                { 
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.LandlordId)
                            </td>
                            <td>
                                <div class="table_img"><img src="@Url.Content(Model.FirstOrDefault().AvartaImgUrl)" title="" /></div>
                            </td>
                            <td>
                               @Html.DisplayFor(modelItem => item.FistName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LastName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ContactTelephone1)
                            </td>
                        
                            <td>
                                @Html.DisplayFor(modelItem => item.ContactEmail)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LandlordCreationDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LandlordUpdateDate)
                            </td>
                            <td>
                    	                <div class="table-button"><a href="@Url.Action("PropertyOwnerDetails", "Manage", new { id=item.LandlordId})"><img src="@Url.Content("~/Content/Images/details.png")" title="Details" /></a></div>
                            </td>
                            <td>
                    	                <div class="table-button"><a href="@Url.Action("DeleteLandlord", "Manage", new { id=item.LandlordId })"><img src="@Url.Content("~/Content/Images/delete.png")" title="Delete" /></a></div>	
                            </td>
                         </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="10">No record</td>

                    </tr>

                }
                
                <tfoot>
                	<tr>
                        <td colspan="10"><span><i class="fa fa-th"></i></span></td>
                        
                	</tr>                
                </tfoot>
            </table>
