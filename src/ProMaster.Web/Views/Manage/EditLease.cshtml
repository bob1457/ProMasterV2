<script type="text/javascript">
    $(document).ready(function () {
        $("#newlist").hide();
        $("#cls").hide();
    });

    $(function () {
        $(".datepicker").datepicker();
    });

    $("#tenant2").click(function () {
        $("#newlist").show();
        $("#tenant2").hide();
        $("#cls").show();
        return false;
    });

    $("#cls").click(function () {
        $("#newlist").hide();
        $("#tenant2").show();
        $("#cls").hide();
        return false;
    });
</script>