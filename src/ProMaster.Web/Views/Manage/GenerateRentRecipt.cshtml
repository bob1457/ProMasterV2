@model ProMaster.Core.Lease.ViewModels.RentPaymentViewModel


@{
    Layout = "~/Views/Shared/_LayoutPDF.cshtml";
}
<paragraph style="font-family: Helvetica; font-size: 18; font-style: bold;">
    <chunk><h3>Recipt of Rent Payment</h3></chunk>
</paragraph>
<newline />
<paragraph style="font-family: Helvetica; font-size: 18; font-style: italic;">
	<chunk red="255" green="0" blue="0">@ViewBag.Title</chunk>
</paragraph>
<paragraph>
    <chunk style="font-family:Times;font-weight:bold;">Rent Payment Date: </chunk>
    <chunk style="font-family:Times;">@Model.PaymentDate.ToString("MM/dd/yyyy")</chunk>
</paragraph>
<paragraph>
    <chunk style="font-family:Times;font-weight:bold;">Rent Payment Amount: </chunk>
    <chunk style="font-family:Times;">@Model.PaymenAmount</chunk>
</paragraph>
<paragraph>
    <chunk style="font-family:Times;font-weight:bold;">TenantName: </chunk>
    <chunk style="font-family:Times;">@Model.LastName, @Model.FirstName</chunk>
</paragraph>

<paragraph>
    <chunk style="font-family:Times;font-weight:bold;">Tenant Email: </chunk>
    <chunk style="font-family:Times;">@Model.ContactEmail</chunk>
</paragraph>
<paragraph>
    <chunk style="font-family:Times;font-weight:bold;">Tenant Telephone: </chunk>
    <chunk style="font-family:Times;">@Model.ContactTelephone1</chunk>
</paragraph>
<br />
<paragraph>
    <chunk style="font-family:Times;font-weight:bold;">Recipt Generated Date: </chunk>
    <chunk style="font-family:Times;">@DateTime.Now.ToString("MM/dd/yyyy")</chunk>
</paragraph>

