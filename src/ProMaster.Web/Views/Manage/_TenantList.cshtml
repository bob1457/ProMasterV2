@model ProMaster.Core.Lease.ViewModels.DisplayLeaseViewModel
    
<table>
        <thead class="table_head">
            <tr>
                <td colspan="8" class="table-h table_head">
                    <span><i class="icon-user"></i></span> Management Contract List
                </td>
            </tr>
    </thead>
    <tr>
            <th class="table_th">ID</th>
            <th class="table_th">First Name</th>
            <th class="table_th">Last Name</th>
            <th class="table_th">Email</th>
            <th class="table_th">Telephone</th>
            <th class="table_th">Added Date</th>

            <th class="table_th"></th>
            <th class="table_th"></th>
        </tr>
    @if (Model.TenantList.Count() != 0)
    {
        
        foreach (var item in Model.TenantList.Take(10))
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TenantId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ContactEmail)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ContactTelephone1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreateDate)
                </td>


                <td>
                    <div class="table-button"><a href="@Url.Action("TenantDetails", "Manage", new { id=item.TenantId })"><img src="@Url.Content("~/Content/Images/details.png")" title="Details" /></a></div>
                </td>
                <td>
                    <div class="table-button"><a class="delete-link" href="~/Document/DeleteDocument/@item.TenantId"><img src="@Url.Content("~/Content/Images/delete.png")" title="Delete" /></a></div>
                </td>
            </tr>           
            
        }
   }
   else
   {
           <tr>
                    <td colspan ="9">No records!</td>
                </tr> 
   }
        <tfoot class="table_th">
            <tr>
                <td colspan="8"><span><i class="icon-clipboard-2"></i></span></td>
            </tr>
        </tfoot>



</table>