@model ProMaster.Infrastructure.UserProfile.ViewModels.CreateProfileViewModel

@{
    ViewBag.Title = "Create Profile";
}

<div class="content-wrapper">
    <aside>
        <div id="left">
            <div class="profile_logo">
                <img src="@Url.Content("~/Content/Documents/Others/avatar_default.png")" alt="" title="" />

            </div>
            
            <div class="profile_caption metro">
                <h3>New Profile: @User.Identity.Name</h3>
                <br />
                <span>
                    <div class="display-label">
                        Profile Created on:
                    </div><br />
                    <div class="display-field">
                        @DateTime.Now.Date
                    </div><br />

                    <div class="display-label">
                        Last Updated on:
                    </div><br />
                    <div class="display-field">
                        @DateTime.Now.Date
                    </div><br />
                </span>

            </div>

        </div>
    </aside><!-- End of aside -->
    <div class="main">
        <div id="add_edit_panel">
            <h3>
                <i class="fa fa-th"></i> &nbsp; CREATE PROFILE
                <span>Please fill/Update all required fields and click "Save".</span>
            </h3>
            

                @using (Html.BeginForm())
                {
                    <div class="edit_field">
                        <fieldset>
                            <legend><span><i class="fa fa-info-circle"></i> Basic Information</span></legend>
                            <div class="display-label">
                                First Name:
                            </div>
                            <div class="display-field">
                                @Html.EditorFor(model => model.FirstName)
                                @Html.ValidationMessageFor(model => model.FirstName)
                            </div>
                            <br />
                            <div class="display-label">
                                Last Name:
                            </div>
                            <div class="display-field">
                                @Html.EditorFor(model => model.LastName)
                                @Html.ValidationMessageFor(model => model.LastName)
                            </div>
                            <br />
                            <div class="display-label">
                                Email:
                            </div>
                            <div class="display-field">
                                @Html.EditorFor(model => model.ContactEmail)
                                @Html.ValidationMessageFor(model => model.ContactEmail)
                            </div>
                            <br />
                            <div class="display-label">
                                Telephone 1:
                            </div>
                            <div class="display-field">
                                @Html.EditorFor(model => model.ContactTelephone1)
                                @Html.ValidationMessageFor(model => model.ContactTelephone1)
                            </div>
                            <br />
                            <div class="display-label">
                                Telephone 2:
                            </div>
                            <div class="display-field">
                                @Html.EditorFor(model => model.ContactTelephone2)
                                @Html.ValidationMessageFor(model => model.ContactTelephone2)
                            </div>
                            <br />
                       </fieldset>


                    </div>
                    
                    <div class="right-aligned"><input type="submit" value="Save" /></div>
                }
            





        </div>
        
    </div><!-- End of main -->

</div><!-- end of content wrapper -->



























    
