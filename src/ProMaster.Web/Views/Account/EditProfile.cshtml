@model ProMaster.Infrastructure.UserProfile.ViewModels.MyProfileViewModel

@{
    ViewBag.Title = "Edit Profile";
}

<div class="content-wrapper">

    <aside> 
    <p><!-- Left Panel/Column -->
      <div id="left">
                   
      	    <div class="profile_logo">
        	    <img src="@Url.Content(@Model.AvartaImgUrl)" alt="" title="@Model.UserName" />            
            </div>

            <div class="profile_caption metro">
        	    <h3>@Html.DisplayFor(model => model.FirstName)  @Html.DisplayFor(model => model.LastName)</h3>
        	    <br />
                <span>
            	    <div class="display-label">
                       Profile Created on:
                    </div><br />
                    <div class="display-field">
                        @Html.DisplayFor(model => model.CreationDate)
                    </div><br />

                    <div class="display-label">
                        Last Updated on:
                    </div><br />
                    <div class="display-field">
                        @Html.DisplayFor(model => model.UpdateDate)
                    </div><br />
                </span>
                        
                
                
            
            
            <p></p>
                
            
            @using (Html.BeginForm("EditProfile", "Account", FormMethod.Post, new { @encType = "multipart/form-data" }))
            {
                      
              <div class="avatar_update">
                   <p></p>
                   <a id="show" href="">Change Image</a><a id="cancel" href="#" >Cancel</a>
                   <p></p>
                   <div id="image">                       
                           <h6>Select image:</h6> 
                           
                           @FileUpload.GetHtml(initialNumberOfFiles: 1, allowMoreFilesToBeAdded: false, addText: "", uploadText: "Update")
                           
                   </div>
               </div>        
            
   
            } 
      </div>
      </div>
        </p>
        <p>&nbsp;</p>
        <p>&nbsp;</p>
    </aside><!-- End of aside -->


    <div class="main">
        <div id="add_edit_panel">
            <h3><i class="fa fa-th"></i> &nbsp; EDIT PROFILE        	
            <span>Please fill/Update all required fields and click "Save".</span>
        </h3>
            <fieldset class="edit">
                <legend><span>Basic Information</span></legend>
                
                @using (Html.BeginForm())
                {      
                            <div class="edit_field">
                                           
                            <div class="display-label">
                                <span class="grey-font">Username:</span>
                            </div>
                            <div class="display-field">
                                <span class="grey-font">@Html.DisplayFor(model => model.UserName) (login name)</span>
                            </div> 
                            <br /><br />
                                <br />
                            <div class="display-label">
                                First Name:
                            </div>
                            <div class="display-field">
                                @Html.EditorFor(model => model.FirstName)
                                @Html.ValidationMessageFor(model => model.FirstName)
                            </div> 
                            <br />
                            <div class="display-label">
                                Last Name:
                            </div>
                            <div class="display-field">
                                @Html.EditorFor(model => model.LastName)
                                @Html.ValidationMessageFor(model => model.LastName)
                            </div>
                            <br />
                            <div class="display-label">
                                Email:
                            </div>
                            <div class="display-field">
                               @Html.EditorFor(model => model.ContactEmail)
                               @Html.ValidationMessageFor(model => model.ContactEmail)
                            </div>
                            <br />
                            <div class="display-label">
                                Telephone 1:
                            </div>
                            <div class="display-field">
                               @Html.EditorFor(model => model.ContactTelephone1)
                               @Html.ValidationMessageFor(model => model.ContactTelephone1)
                            </div>
                            <br />
                            <div class="display-label">
                                Telephone 2:
                            </div>
                            <div class="display-field">
                                @Html.EditorFor(model => model.ContactTelephone2)
                                @Html.ValidationMessageFor(model => model.ContactTelephone2)
                            </div>
                            <br />
                        
                        
                        </div>   
                    <div class="right-aligned"><input type="submit" value="Save" /></div>
                } 
                    </fieldset>
                    
                
                    
           

        </div>




    </div>



























</div><!-- end of content wrapper -->





















@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


<script type="text/javascript">
    $("#cancel").hide();
    $("#image").hide();

    $("#show").click(function () {
        $("#image").show();
        $("#show").hide();
        $("#cancel").show();



        return false;

    });

    $("#cancel").click(function () {
        $("#image").hide();
        $("#show").show();
        $("#cancel").hide();
    });
</script>