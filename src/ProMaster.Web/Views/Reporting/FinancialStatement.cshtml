                </div><br />
                <div class="left-aligned"><input id="md" type="submit" value="Get Report" /><div id="loading"></div></div>

                <div id="report" class="metro">
                    <fieldset>
                        <legend><i class="icon-clipboard-2" style="background:#007bb6; color: white; padding: 10px; border-radius: 50%"></i> Property Rent Revenue Report</legend>
                        
                        <div id="period">Report Time Period: &nbsp; Start:<div id="s"></div> &nbsp; End: <div id="e"></div></div>
                        <br /><br /> 
                        <div id="statement"></div>

                    </fieldset>                    
                 </div>

            </div>
            
    </div>
</div>
    
    </div><!-- End of content-wrapper -->


<script type="text/javascript">
    $(document).ready(function () {
        $("#all").prop('checked', true);
        $("#p").hide();
        //$("#report").hide();

        $("#indi").change(function () {

            var isChecked = $(this).is(':checked');



            if (isChecked) {
                $("#p").show();
            }
            else {
                $("#p").hide();
            }
        });

        $("#all").change(function () {

            var isChecked = $("#indi").is(':checked');



            if (isChecked) {
                $("#p").show();
            }
            else {
                $("#p").hide();
            }
        });

    });
		

</script>

<script type="text/ecmascript">
    $(function () {
        $(".datepicker").datepicker();
    });
</script>

<!-- Financial Reporting Script --> 
<script type="text/javascript">
    $(document).ready(function () {
        $("#md").button();
        $("#report").hide();
        //$("#period").hide();


        $("#md").click(function () {
            $("#period").show();

            $("#loading").show();

            var sDate = $("#sDate").val();
            var eDate = $("#eDate").val();
            // var propertyId = @(Model.PropertyId);
            var propertyId = $("#property option:selected").val();

            //alert(propertyId);

            $("div#s").text(sDate);
            $("#e").text(eDate);





            var url = "/Reporting/GetFinancialStatementByProperty/";
            var q = "id=" + propertyId + "&startPeriod=" + sDate + "&endPeriod=" + eDate;
            $.get(url, q, function (data) {
                $("#statement").html(data);
                $("#report").show();

                $("#loading").fadeOut("1000");

                return false;



                // Suceeded 

            });
        });
    });




</script>

<script type="text/javascript">
    $(document).ready(function () {
        $("#loading").hide();
    });
</script>